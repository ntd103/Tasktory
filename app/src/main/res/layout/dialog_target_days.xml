<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số ngày mục tiêu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/radioGroupTargetDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioForever"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mãi mãi"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio7Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7 Days"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio21Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21 Days"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio30Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 Days"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio100Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100 Days"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio365Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="365 Days"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radioCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tùy chỉnh" />

        <LinearLayout
            android:id="@+id/customDaysLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editTextCustomDays"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="1~999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HỦY BỎ"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />
    </LinearLayout>
</LinearLayout>
